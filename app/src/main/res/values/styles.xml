<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/AppTheme.BaseText</item>
    </style>

    <style name="AppTheme.BaseText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="AppTheme.H1" parent="AppTheme.BaseText">
        <item name="android:textSize">@dimen/font_size_h1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/standard_margin</item>
        <item name="android:paddingBottom">@dimen/standard_margin</item>
    </style>

    <style name="AppTheme.Body" parent="AppTheme.BaseText">
        <item name="android:textSize">@dimen/font_size_body</item>
    </style>

    <style name="AppTheme.ListItem" parent="AppTheme.BaseText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_size_list_item</item>
    </style>

    <dimen name="font_size_body">14dp</dimen>
</resources>
